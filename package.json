{
  "name": "vi",
  "version": "1.0.0",
  "description": "VI - Comparing Different Personality Theories",
  "authors": "Afonso Lu√≠s (83419), Joana Sesinando (81583), Tiago Delgado (86521)",
  "repository": {
    "type": "git",
    "url": "https://github.com/joanasesinando/VI"
  },
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass -o dist/css src/scss",
    "lint": "eslint src/js --fix || true",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "js": "mkdirp dist/js -p && cpy \"**/src/js/*.js\" \"dist/js\"",
    "favicon": "cpy \"favicon/*\" \"dist/favicon\"",
    "images": "cpy \"src/imgs/*\" \"dist/imgs\"",
    "data": "cpy \"src/data/*\" \"dist/data\"",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s lint js",
    "build:favicon": "run-s favicon",
    "build:images": "run-s images",
    "build:data": "run-s data",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "dependencies": {
    "postcss": "^8.1.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.2",
    "browser-sync": "^2.26.13",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "mkdirp": "^1.0.4",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.1.8",
    "rimraf": "^3.0.2",
    "stylelint": "^13.8.0"
  },
  "main": ".eslintrc.js",
  "type": "module"
}
